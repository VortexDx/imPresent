<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowAttendanceFull">

    <TextView
        android:id="@+id/textView_showAttendanceFull_StudentData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Atendance Data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listview_showAttendanceFull"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_showAttendanceFull_totalClasses" />

    <TextView
        android:id="@+id/textView_showAttendanceFull_totalClasses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TotalClasses"
        app:layout_constraintEnd_toEndOf="@+id/textView_showAttendanceFull_StudentData"
        app:layout_constraintStart_toStartOf="@+id/textView_showAttendanceFull_StudentData"
        app:layout_constraintTop_toBottomOf="@+id/textView_showAttendanceFull_StudentData" />
</androidx.constraintlayout.widget.ConstraintLayout>