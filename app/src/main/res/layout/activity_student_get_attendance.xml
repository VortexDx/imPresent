<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentGetAttendance">

    <ImageButton
        android:id="@+id/imageButton_StudentGetAttendance_getFullData"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/textView_StudnetGetAttendance_or"
        app:layout_constraintStart_toStartOf="@+id/textView_StudnetGetAttendance_or"
        app:layout_constraintTop_toBottomOf="@+id/textView_StudnetGetAttendance_or"
        app:srcCompat="@drawable/data" />

    <ImageButton
        android:id="@+id/imageButton_StudentGetAttendance_getAttendance"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_StudentGetAttendance_Time"
        app:srcCompat="@drawable/list" />

    <TextView
        android:id="@+id/textView_StudnetGetAttendance_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="OR"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/textView_StudentGetAttendance_getAttendance"
        app:layout_constraintStart_toStartOf="@+id/textView_StudentGetAttendance_getAttendance"
        app:layout_constraintTop_toBottomOf="@+id/textView_StudentGetAttendance_getAttendance" />

    <TextView
        android:id="@+id/textView_StudentGetAttendance_getAttendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Get Attendance"
        app:layout_constraintEnd_toEndOf="@+id/imageButton_StudentGetAttendance_getAttendance"
        app:layout_constraintStart_toStartOf="@+id/imageButton_StudentGetAttendance_getAttendance"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_StudentGetAttendance_getAttendance" />

    <TextView
        android:id="@+id/textView_StudentGetAttendance_getFull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Get all Data"
        app:layout_constraintEnd_toEndOf="@+id/imageButton_StudentGetAttendance_getFullData"
        app:layout_constraintStart_toStartOf="@+id/imageButton_StudentGetAttendance_getFullData"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_StudentGetAttendance_getFullData" />

    <TextView
        android:id="@+id/textView_StudentGetAttendance_selectSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:text="Select Subject"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_StudentGetAttendance_selectDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Select Date"
        app:layout_constraintEnd_toEndOf="@+id/textView_StudentGetAttendance_selectSub"
        app:layout_constraintStart_toStartOf="@+id/textView_StudentGetAttendance_selectSub"
        app:layout_constraintTop_toBottomOf="@+id/textView_StudentGetAttendance_selectSub" />

    <TextView
        android:id="@+id/textView_StudentGetAttendance_selectTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Select Time"
        app:layout_constraintEnd_toEndOf="@+id/textView_StudentGetAttendance_selectDate"
        app:layout_constraintStart_toStartOf="@+id/textView_StudentGetAttendance_selectDate"
        app:layout_constraintTop_toBottomOf="@+id/textView_StudentGetAttendance_selectDate" />

    <Spinner
        android:id="@+id/spinner_StudentGetAttendance_sub"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_StudentGetAttendance_selectSub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_StudentGetAttendance_selectSub" />

    <Spinner
        android:id="@+id/spinner_StudentGetAttendance_date"
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_StudentGetAttendance_selectDate"
        app:layout_constraintEnd_toEndOf="@+id/spinner_StudentGetAttendance_sub"
        app:layout_constraintStart_toStartOf="@+id/spinner_StudentGetAttendance_sub"
        app:layout_constraintTop_toTopOf="@+id/textView_StudentGetAttendance_selectDate" />

    <Spinner
        android:id="@+id/spinner_StudentGetAttendance_Time"
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_StudentGetAttendance_selectTime"
        app:layout_constraintEnd_toEndOf="@+id/spinner_StudentGetAttendance_date"
        app:layout_constraintStart_toStartOf="@+id/spinner_StudentGetAttendance_date"
        app:layout_constraintTop_toTopOf="@+id/textView_StudentGetAttendance_selectTime" />
</androidx.constraintlayout.widget.ConstraintLayout>